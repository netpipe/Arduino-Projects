struct TimeVar {
  byte hour;
  byte minute;
  byte second;
  bool operator==(const TimeVar& t) {
    return (hour == t.hour && minute == t.minute && second == t.second);
  }
  bool operator!=(const TimeVar& t) {
    return (hour != t.hour || minute != t.minute || second != t.second);
  }
};

